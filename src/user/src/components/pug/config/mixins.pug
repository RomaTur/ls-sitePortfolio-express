mixin commentPerson(img, name, prof)
    .comment__person
        .comment__person-avatar
            img(class="comment__person-img" src= img, alt= name)
        .comment__person-desc
            .comment__person-name= name
            .comment__person-prof= prof

mixin contactItem(text, className, href, ico)
    li(class= className+'__item')
        +svg(className+'__ico', ico)
        if(href)
            a(class= className+'__link' href= href)= text
        else
            span(class= className+'__text')= text 

mixin skillProgress(name, pct)
    .skill(:data-pct= pct :name= name)
        svg(class="skill__svg" viewBox="0 0 220 220" version="1.1" xmlns="http://www.w3.org/2000/svg")
            circle(class="skill__circle" r="90" cx="110" cy="110" fill="transparent" stroke-dasharray="565.48" stroke-dashoffset="0")
            circle(class="skill__circle skill__bar" r="90" cx="110" cy="110" fill="transparent" stroke-dasharray="565.48" stroke-dashoffset="0")

