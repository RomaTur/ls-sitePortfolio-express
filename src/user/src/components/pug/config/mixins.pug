
mixin svg(classIco, name)
    //- - var hrefSvg = './src/assets/img/symbols.svg#'+ name
    - var hrefSvg = './user/dist/symbols.svg#'+ name
    
    svg(class= classIco)
        use(xlink:href=hrefSvg)
    

mixin listItem(text, className, href, name, secClass)
    if(href)
        li(class= className+'__item')
            if(secClass)
                #{secClass}
            a(class= className+'__link' href= href)= text
                if(name)
                    +svg(className+'__ico', name)
            if(secClass)
                #{secClass}
    else 
        li(class= className+'__item')= text

mixin headerSame()
    .hamburger
        ul.hamburger__list
            li.hamburger__line.hamburger__line--one
            li.hamburger__line.hamburger__line--two
            li.hamburger__line.hamburger__line--three
    ul.social
        +listItem('', 'social', 'https://vk.com/id_r0mashka','vk')
        +listItem('', 'social', 'https://github.com/RomaTur', 'github')
        +listItem('', 'social', 'https://twitter.com/RoMan_111', 'tw')
    .header__triangle-left
    .header__triangle-right
    a.header__arrow-link(href='#')
        +svg('header__arrow-img', 'arrow_down')
 
mixin commentPerson(img, name, prof)
    .comment__person
        .comment__person-avatar
            img(class="comment__person-img" src= img, alt= name)
        .comment__person-desc
            .comment__person-name= name
            .comment__person-prof= prof

mixin contactItem(text, className, href, ico)
    li(class= className+'__item')
        +svg(className+'__ico', ico)
        if(href)
            a(class= className+'__link' href= href)= text
        else
            span(class= className+'__text')= text 

mixin skillProgress(name, pct)
    .skill(:data-pct= pct :name= name)
        svg(class="skill__svg" viewBox="0 0 220 220" version="1.1" xmlns="http://www.w3.org/2000/svg")
            circle(class="skill__circle" r="90" cx="110" cy="110" fill="transparent" stroke-dasharray="565.48" stroke-dashoffset="0")
            circle(class="skill__circle skill__bar" r="90" cx="110" cy="110" fill="transparent" stroke-dasharray="565.48" stroke-dashoffset="0")

